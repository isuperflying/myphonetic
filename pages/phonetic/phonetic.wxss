page {
  width: 100%;
  height: 100%;
  background: #6ad6ff;
}

swiper {
  width: 100%;
  height: 100%;
  margin-top: 130rpx;
}

scroll-view {
  width: 100%;
  height: 100%;
  margin-bottom: 50rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

swiper-item{
  width: 100%;
  height: 100%;
}

.tab-wrapper {
  width: 100%;
  height: 112rpx;
  background: #6ad6ff;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1;
}

.swiper-tab {
  width: 88%;
  text-align: center;
  height: 72rpx;
  line-height: 72rpx;
  margin-left: 6%;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 20px;
}

.swiper-tab-item {
  display: inline-block;
  width: 50%;
  color: #333;
  border-radius: 20px;
}

.active {
  color: #fff;
  background: #f5bd44;
}

.group1 {
  width: 94%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: 5rpx solid #adedff;
  margin-left: 3%;
  background: #adedff;
  border-radius: 10rpx;
  margin-bottom: 36rpx;
}

.group1-name {
  font-size: 32rpx;
  color: #333;
  width: 20%;
  text-align: center;
}

.group1-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.group1-subset {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-left: 2rpx solid #92e2f8;
  border-bottom: 2rpx solid #9be0f3;
}

.group1-subset-name {
  font-size: 24rpx;
  color: #a55f5f;
  width: 20%;
  text-align: center;
}

.subset-line {
  width: 1rpx;
  height: 120rpx;
  background: #f1f1f1;
}

.group1-subset-list {
  width: 80%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}

.phonetic-item {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #a2dd63;
  color: #000000;
  font-size: 28rpx;
  text-align: center;
  margin-left:12rpx;
  border-radius: 6rpx;
}

.line-view {
  width: 100%;
  height: 50rpx;
}

.group2 {
  width: 360rpx;
  height: 360rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  margin-bottom: 24rpx;
  position: relative;
  border-radius: 12rpx;
  margin-left: auto;
  margin-right: auto;
}

.learn-word {
  width: 256rpx;
  height: 256rpx;
}

.learn-word-txt {
  color: #6ad6ff;
  font-size: 26px;
  font-weight: 600;
}
.nav-view {
 width: 360rpx;
  height: 360rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.model{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);/*蒙层的透明度可以自定义*/
  z-index: 9999999999;
}
.show{
  display: block;
}
.close{
  display: none;
}
/*下方可以自定义*/
.model-pack{
  width: 80%;
  margin: 0 auto;
  margin-top: 50%;
  background: #fff;
  border-radius: 8px;
}
.model-title{
  font-size: 1.1rem;
  text-align: center;
  padding: 0.5rem 0;
}
.model-content{
  font-size: 0.8rem;
  padding: 0.3rem 1.2rem;
  height: 120rpx;
}
.model-button{
  font-size: 0.9rem;
  margin-top: 0.3rem;
  width: 100%;
  border-top: 1px solid #eee;
  border-radius: 0 0 8px 8px;
  overflow: hidden;
  text-align: center;
}
.model-button-cancel{
  float: left;
  width: 50%;
  height: 2.5rem;
  line-height: 2.5rem;
  box-sizing: border-box;
  border-right: 1px solid #eee;
  color: #aaa;
}
.model-button-confirm{
  width: 50%;
  float: left;
  height: 2.5rem;
  line-height: 2.5rem;
  color: #2ec24b;
}
.confirm{
  height: 2.5rem;
  line-height: 2.5rem;
}

button::after{
  border: 0;
}