/* pages/read/read.wxss */

page {
  width: 100%;
  height: 100%;
  background: #ffffff;
}

.content-view {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  border-radius: 8px;
}

.read-wrapper {
  width: 94%;
  height: 360rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 36rpx;
}

.read-info {
  width: 90%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.phonetic-type {
  font-size: 50rpx;
  color: #000000;
  font-weight: 500;
  margin-left: 10rpx;
}

.phonetic-value {
  font-size: 30rpx;
  color: #5b3f3a;
  font-weight: 500;
  margin-left: 30rpx;
}

.cn-word {
  width: 94%;
  height: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cn-word-txt{
  font-size: 40rpx;
  color: #56585a;
  font-weight: 500;
}

.read-play{
  width: 94%;
  height: 100rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.play-btn {
  width: 100rpx;
  height: 100rpx;
}

.example-wrapper {
  width: 100%;
  height: auto;
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.example-img {
  width: 500rpx;
  height: 375rpx;
}

.next-step {
  position: fixed;
  bottom: 100rpx;
  left: 7%;
  width: 86%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #f5bd44;
  color: #fff;
  border-radius: 40rpx;
}

.next-step-txt {
  font-size: 36rpx;
  color: #fff;
  font-weight: 500;
}