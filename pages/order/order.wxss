/* pages/order/order.wxss */

.order-item {
  width: 100%;
  height: 220rpx;
  border-bottom: #f1f1f1 1rpx solid;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start;
}

.top-view {
  width: 100%;
  height: 100rpx;
  display: flex;
  margin-left: 20rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.left-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: start;
}

.head-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 10rpx;
}

.right-view {
  height: 80rpx;
  display: flex;
  margin-right: 20rpx;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.is-pay {
  color: #28c564;
  text-align: center;
  height: 100%;
  line-height: 100%;
  margin-right: 10rpx;
}

.not-pay {
  color: #999;
  text-align: center;
  height: 100%;
  line-height: 100%;
  margin-right: 10rpx;
}

.try-use {
  color: #ff5555;
  text-align: center;
  height: 100%;
  line-height: 100%;
  margin-right: 10rpx;
}

.bottom-view {
  width: 100%;
  height: 120rpx;
  display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.price {
  color: #f55;
  font-size: 36rpx;
}

.date-view {
  width: 60%;
  height: 100%;
  line-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}